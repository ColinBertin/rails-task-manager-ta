<div class="container">
  <h2><%= @task.title %></h2>
  <p><%= @task.details %></p>
  <% if @task.completed %>
    <i class="far fa-check-square"></i> Finished
  <% else %>
    <i class="far fa-square"></i> Not finish yet
  <% end %>
  <hr>
  <%= link_to 'Edit the task', edit_task_path(@task), class: "btn btn-primary mb-3"%>
  <br>
  <%= link_to "Back to list", tasks_path %>
</div>

<%= form_for(@task) do |f| %>
  <div class="form-group mb-2">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group mb-2">
    <%= f.label :details %>
    <%= f.text_area :details, class: 'form-control' %>
  </div>
  <% unless f.object.new_record? %>
    <div class="checkbox">
      <label>
        <%= f.check_box :completed %> Completed
      </label>
    </div>
  <% end %>
  <%= f.submit class: 'btn btn-primary mt-2' %>
<% end %>
